{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "htl",
	"patterns": [
		{
			"include": "#sly"
		},
		{
			"include": "#expression"
		}
	],
	"repository": {
		"sly": {
			"patterns": [
				{
					"begin": "(?i)(<)(sly)(?=\\s|/?>)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.definition.tag.begin.html"
						},
						"2": {
							"name": "entity.name.tag.htl"
						}
					},
					"end": ">",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.tag.end.html"
						}
					},
					"name": "meta.tag.structure.$2.start.html",
					"patterns": [
						{
							"include": "text.html.basic#attribute"
						}
					]
				},
				{
					"begin": "(?i)(</)(sly)(?=\\s|/?>)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.definition.tag.begin.html"
						},
						"2": {
							"name": "entity.name.tag.htl"
						}
					},
					"end": ">",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.tag.end.html"
						}
					},
					"name": "meta.tag.structure.$2.end.html",
					"patterns": [
						{
							"include": "text.html.basic#attribute"
						}
					]
				}
			]
		},
		"expression": {
			"patterns": [
				{
					"begin": "(\\${)",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.expression.begin.htl"
						}
					},
					"end": "}(?!')",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.expression.end.htl"
						}
					},
					"name": "entity.name.function.expression.htl",
					"patterns": [
						{

						}
					]
				}
			]
		}
	},
	"injectionSelector": "L:text.html.derivative",
	"scopeName": "text.html.htl"
}